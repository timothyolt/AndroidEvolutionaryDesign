<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.timothyolt.evolutionarydesign">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".ReleaseEvolutionaryDesignApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AndroidEvolutionaryDesign">
        <activity android:name=".MainActivity" android:exported="true"/>
        <activity android:name=".auth.AuthenticationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                        android:scheme="http"
                        android:host="timothyolt.com"
                        android:path="/android-evolutionary-design/login"
                />
            </intent-filter>
            <!-- Because we are doing auth out-of-order right now -->
            <meta-data android:name="android.app.shortcuts"
                       android:resource="@xml/shortcuts" />
        </activity>
    </application>

</manifest>